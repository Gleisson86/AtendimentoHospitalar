<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="AtendimentoHospitalar">
		<class>main.java.model.Atendimento</class>
		<class>main.java.model.AtendimentoClinico</class>
		<class>main.java.model.AtendimentoEmergencial</class>
		<class>main.java.model.Cidade</class>
		<class>main.java.model.Endereco</class>
		<class>main.java.model.Entidade</class>
		<class>main.java.model.Hospital</class>
		<class>main.java.model.Medico</class>
		<class>main.java.model.Paciente</class>
		<class>main.java.model.PessoaFisica</class>
		<class>main.java.model.Sintoma</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/atend_hosp" />
			<property name="javax.persistence.jdbc.user" value="postres" />
			<property name="javax.persistence.jdbc.password" value="postres" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<!-- Configuring Connection Pool -->
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="500" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="2000" />
		</properties>
	</persistence-unit>
</persistence>
